<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="CardText">
        <item name="android:textSize">@dimen/card_small_text</item>
        <item name="android:textColor">@color/card_text</item>
        <item name="android:textColorLink">@color/link_text</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
    </style>
    
    <style name="ErrorTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/card_small_text</item>
    </style>
    
    <style name="ErrorDescr">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/card_tiny_text</item>
    </style>
    
    <style name="CardTextRed" parent="@style/CardText">
        <item name="android:textSize">@dimen/card_tiny_text</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:background">@color/red</item>
    </style>
    
    <style name="CalendarEventCardTextBlock">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/card_padding</item>
        <item name="android:paddingRight">@dimen/card_padding</item>
        <item name="android:paddingBottom">@dimen/card_padding_nodivider</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="CardLightText" parent="@style/CardText">
        <item name="android:textColor">@color/card_light_text</item>
    </style>
    

